<div id="home">

  <div class="container">
    <div id="top-right">
      <button class="new-user">New User</button>
      <button class="delete-user">Delete User</button>
    </div>
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        {{!-- Display username --}}
        <h2>
          <span class="member-name"></span> Home Page!</h2>

        {{!-- Logout option --}}

        <nav class="navbar navbar-default">
          <div class="container-fluid">
            <div class="navbar-header">
              <a class="navbar-brand" href="/logout">
                Logout
              </a>
            </div>
          </div>
        </nav>


        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="quote-text">Inspire Yourself!</label>
            <input type="text" id="quote-text" class="form-control" aria-describedby="quote-text" placeholder="Save Quotes Here For Later">
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3 class="center">:Git Inspired:</h3>
        <ul id="quote-list" class="list-group">
          {{#each quotes}}
          <li data-id="{{this.id}}" class="list-group-item">
            <p href="quote/{{this.id}}">{{this.text}}</p>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
  
  <br>
  <div class="center">
    <input id="url-me-up" placeholder="url here">
    <input id="comment-me-up" placeholder="comment here">
    <input id="path-me-up" placeholder="path here">
    <button id="submit-me">submit</button>
  </div>
  <div class="container">
    <div class="row">
      {{#each user/0/urls}}
        <div class="col-4">
          <div class="card-body">
            <section id="bg-pic-{{uId}}" class="url-house-{{uId}} ajax-iterator">
                <div class="protecter-bg">
                  <div class="url-grabber-{{uId}} url-{{uId}} url-spell">
                      {{url}}
                  </div>
                  <div class="url-grabber-{{uId}} comment-{{uId}}">
                      {{comment}}
                  </div>
                  <div class="url-grabber-{{uId}} path-{{uId}}">
                      {{filePath}}
                  </div>
                  <button class="peek-a-boo" data-site={{url}}>{{url}}</button>
                  <button class="change-me" data-id={{uId}} data-update="false">update {{uId}}</button>
                  <button class="delete-me" data-id={{uId}}>delete {{uId}}</button><hr>
                </div>
            </section>
          </div>
        </div>
      {{/each}}
    </div>
  </div>

</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>